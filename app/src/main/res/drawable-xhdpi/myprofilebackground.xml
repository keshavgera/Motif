<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" >
    
    <!-- view background color -->
    <solid
        android:color="#FFFFFF" >
    </solid>
 
    <!-- view border color and width -->
    <stroke
        android:width="1dp"
        android:color="#FFFFFF" >
    </stroke>
 
    <!-- If you want to add some padding -->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp"    >
    </padding>
 
</shape>
