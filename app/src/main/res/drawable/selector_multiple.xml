<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item><layer-list>
        <item><shape>
            <gradient android:angle="90" android:endColor="@color/select" android:startColor="@color/select" android:type="linear" />

            <stroke android:width="1dp" android:color="@color/select" />

            <corners android:radius="5dp" />

            <padding android:bottom="3dp" android:left="3dp" android:right="3dp" android:top="3dp" />
        </shape></item>
        <item >
            <bitmap android:gravity="bottom|right" android:src="@drawable/fillter" />

            // you can use any other image here, instead of default_holo_dark_am
        </item>
    </layer-list></item>

</selector>