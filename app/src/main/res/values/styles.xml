    <style name="ActionBarTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primaryDark</item>
        <item name="colorPrimaryDark">@color/primary</item>
        <item name="colorControlNormal">@color/textColor</item>
        <item name="android:background">@color/primaryDark</item>
        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/textColor</item>
        <item name="android:statusBarColor">@color/primary</item>


    </style>

    <style name="MyActionBar">
        <item name="android:titleTextStyle">@style/MyActionBarTextStyle</item>
    </style>


    <style name="AppTheme.Widget"/>


    <style name="MyActionBarTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="expandedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#ffff3017</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="collapsedappbar" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ThemeToolbar" parent="Theme.AppCompat.Light">

        <!-- navigation icon color -->
        <item name="colorControlNormal">@color/textColor</item>

        <!-- color of the menu overflow icon -->
        <item name="android:textColorSecondary">@color/textColor</item>


    </style>

    <style name="MyTabLayoutTextAppearance" parent="@style/Widget.AppCompat.ActionBar.TabView">

        <item name="android:textSize">14sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

    </style>

    <style name="MyTabProfile" parent="@style/Widget.AppCompat.ActionBar.TabView">

        <item name="android:textSize">11sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

    </style>
    <style name="MyTabLayoutTextAppearanc" parent="@style/Widget.AppCompat.ActionBar.TabView">

        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

    </style>

    <style name="MyDrawerArrowToggle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>
    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>
    <style name="Backarrow" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
        <!--<item name="color">@color/actionbar_icon</item>-->

    </style>

    <style name="holoSpinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/select</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/select</item>
        <!--<item name="android:textColorHint">@color/Gray</item>-->
        <item name="android:textSize">16sp</item>

        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@color/select</item>
        <item name="colorControlNormal">@color/Gray</item>
        <item name="colorControlActivated">@color/select</item>

    </style>

    <style name="Color1SwitchStyle">
        <item name="colorControlActivated">@color/select</item>
    </style>


    <style name="TextViewLarge" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/black</item>

    </style>
    <style name="TextViewHeading" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextViewLargeWhite" parent="@android:style/TextAppearance.Large">
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="TextViewSmallBlack" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="TextViewDetail" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/tv_detail_color</item>

    </style>

    <style name="TextViewDate" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/tv_date_color</item>

    </style>

    <style name="TextViewPrice" parent="@android:style/TextAppearance.Small">
        <item name="android:textColor">@color/tv_price_color</item>

    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/et_text_color</item>
        <item name="android:textSize">16sp</item>
        <item name="colorAccent">@color/et_hint_color</item>

    </style>


    <style name="MyButton" parent="android:Widget.Button">
        <item name="android:textSize">17sp</item>
        <item name="android:background">@color/actionBarColor</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/actionBarColor</item>
        <item name="colorControlActivated">@color/actionBarColor</item>
    </style>


    <style name="myPopupMenuTextAppearanceSmall" parent="@android:style/TextAppearance.DeviceDefault.Widget.PopupMenu.Small">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
    </style>


</resources>
